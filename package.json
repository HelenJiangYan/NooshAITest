{
  "name": "noosh-ai-tests",
  "version": "1.0.0",
  "description": "Noosh AI 系统自动化测试框架 - Playwright + MCP",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:ai": "playwright test tests/e2e/ai-assistant",
    "test:auth": "playwright test tests/e2e/auth",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:auth": "playwright test tests/e2e/auth",
    "test:e2e:ai": "playwright test tests/e2e/ai-assistant",
    "test:e2e:workflows": "playwright test tests/e2e/workflows",
    "test:integration": "playwright test tests/integration",
    "test:mcp": "playwright test tests/integration/mcp",
    "test:api": "playwright test tests/integration/api",
    "report": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:clean": "rm -rf allure-results allure-report || rmdir /s /q allure-results allure-report",
    "test:allure": "npm test && npm run allure:serve",
    "codegen": "playwright codegen https://nooshchat.qa2.noosh.com",
    "install:browsers": "playwright install"
  },
  "keywords": [
    "playwright",
    "mcp",
    "automation",
    "testing",
    "noosh-ai"
  ],
  "author": "Noosh QA Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "dotenv": "^16.4.0",
    "allure-playwright": "^3.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.0"
  }
}
