# Noosh AI 测试环境配置示例
# 复制此文件为 .env 并填入实际值

# 授权登录URL（输入账号密码的页面）
AUTH_URL=https://nooshauth.qa2.noosh.com

# 应用主站URL（登录后使用的页面）
BASE_URL=https://nooshchat.qa2.noosh.com

# API 基础URL
API_BASE_URL=https://nooshchat.qa2.noosh.com/api

# 测试账号
TEST_USERNAME=your_username
TEST_PASSWORD=your_password

# 浏览器设置
HEADLESS=false
SLOW_MO=0

# 超时设置（毫秒）
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000

# ============================================
# MCP 集成测试配置
# ============================================

# MCP 服务器路径（必填 - 启用 MCP 测试时需要配置）
# Windows 示例：C:\Users\YourName\projects\mcp-server
# Linux/Mac 示例：/home/user/projects/mcp-server
MCP_SERVER_PATH=

# MCP 服务器启动命令（默认：node）
MCP_SERVER_COMMAND=node

# MCP 服务器启动参数（多个参数用逗号分隔）
# 示例：./mcp-server/index.js
# 示例：./server.js,--port,3000
MCP_SERVER_ARGS=./mcp-server/index.js

# MCP 测试工具配置（可选）
# 测试用的工具名称
MCP_TEST_TOOL_NAME=search_knowledge

# 测试用的工具参数（JSON 格式，需要转义引号）
MCP_TEST_TOOL_ARGS={"query":"测试查询","max_results":5}

# MCP 资源测试配置（可选）
# 测试用的资源 URI
MCP_TEST_RESOURCE_URI=file:///test/resource.txt

# 受限资源 URI（用于权限测试）
MCP_TEST_RESTRICTED_RESOURCE=file:///restricted/resource.txt

# 资源模板 URI（用于模板测试）
MCP_TEST_RESOURCE_TEMPLATE=file:///{workspace}/README.md

# MCP 功能开关（可选）
# 服务器是否支持 Logging 功能
MCP_SUPPORTS_LOGGING=false

# 服务器是否支持资源订阅功能
MCP_SUPPORTS_SUBSCRIPTIONS=false

# 旧配置（兼容性保留）
MCP_ENABLED=true
MCP_SERVER_URL=http://localhost:3000

# AI测试配置
AI_RESPONSE_TIMEOUT=10000
AI_COMMAND_DELAY=1000

# 截图和视频
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# 重试配置
RETRY_COUNT=2

# 并发数
WORKERS=4

# CI环境标识
CI=false

# 日志级别
LOG_LEVEL=info
